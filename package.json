{
	"name": "skeleton_block_theme",
	"version": "1.0.0",
	"description": "Skeleton with Plugin boilerplate and gutenberg block support",
	"author": "BooSpot",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"files": [
		"*"
	],
	"scripts": {
		"build": "wp-scripts build src/index.js src/public.js",
		"format:js": "wp-scripts format-js",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"start": "wp-scripts start src/index.js src/public.js",
		"packages-update": "wp-scripts packages-update",
		"create-zip": "wp-scripts plugin-zip",
		"sync": "browser-sync start --config \"conf/browser-sync.js\"",
		"dev": "concurrently -k \"npm run start\" \"npm run sync\""
	},
	"dependencies": {
		"@wordpress/block-editor": "^9.1.0",
		"@wordpress/blocks": "^11.8.0",
		"@wordpress/i18n": "^4.9.0"
	},
	"devDependencies": {
		"@wordpress/scripts": "^23.1.0",
		"browser-sync": "^2.27.10",
		"concurrently": "^7.2.2",
		"dotenv": "^16.0.1"
	}
}
